<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical" >

    <TextView
        style="@style/Title"
        android:text="添加黑名单号码" />

    <EditText
        android:id="@+id/et_dialog_activity_blacknumber_add_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入您要添加到黑名单的号码"
        android:inputType="text|phone"
        android:textColor="#000"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/rg_dialog_activity_blacknumber_add_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_dialog_activity_blacknumber_add_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="拦截短信"
            android:textColor="#000"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_dialog_activity_blacknumber_add_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拦截电话"
            android:textColor="#000"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_dialog_activity_blacknumber_add_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拦截电话和短信"
            android:textColor="#000"
            android:textSize="12sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/bt__dialog_activity_blacknumber_add_commit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_addcontact_bg"
            android:text="确认" />

        <Button
            android:id="@+id/bt__dialog_activity_blacknumber_add_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_addcontact_bg"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>