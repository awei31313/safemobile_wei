<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <TextView
        android:id="@+id/tv_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_setting_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_setting_title"
        android:textSize="12sp" />

    <!--
         android:clickable="false"
         android:focusable="false"
         android:focusableInTouchMode="false"
                              让当前的 CheckBox不能被点击,即不能响应事件
    -->
    <ImageView
        android:id="@+id/iv_setting_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/jiantou1_pressed"/>

    <TextView
        android:layout_width="280dp"
        android:layout_height="0.3dp"
        android:layout_below="@id/tv_setting_des"
        android:layout_marginTop="7dp"
        android:background="#000" />

</RelativeLayout>