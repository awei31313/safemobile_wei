<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_item_activity_cacheclear_linearlayout_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_item_activity_cacheclear_linearlayout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item_activity_cacheclear_linearlayout_icon"
        android:text="应用名称"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_item_activity_cacheclear_linearlayout_memory_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_activity_cacheclear_linearlayout_name"
        android:layout_toRightOf="@id/iv_item_activity_cacheclear_linearlayout_icon"
        android:text="占用内存大小"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_item_activity_cacheclear_linearlayout_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_iv_item_activity_blacknumber_bg" />

</RelativeLayout>