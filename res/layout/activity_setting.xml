<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/Title"
        android:text="设置中心" />
    <!-- 将以下的相对布局,抽取到单独的一个类中去做管理,以后只需要在布局文件中添加此类,即可达到以下效果 -->

    <com.example.mobilesafe1.view.CheckboxView_Setting
        xmlns:mobilesafe1="http://schemas.android.com/apk/res/com.example.mobilesafe1"
        android:id="@+id/isv_setting_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe1:desoff="自动更新已关闭"
        mobilesafe1:deson="自动更新已开启"
        mobilesafe1:destitle="自动更新设置" >
    </com.example.mobilesafe1.view.CheckboxView_Setting>

    <com.example.mobilesafe1.view.CheckboxView_Setting
        xmlns:mobilesafe1="http://schemas.android.com/apk/res/com.example.mobilesafe1"
        android:id="@+id/isv_setting_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe1:desoff="归属地的显示已关闭"
        mobilesafe1:deson="归属地的显示已开启"
        mobilesafe1:destitle="电话归属地的显示设置" >
    </com.example.mobilesafe1.view.CheckboxView_Setting>

    <com.example.mobilesafe1.view.SingleChoiceView_Setting
        android:id="@+id/scvs_setting_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.example.mobilesafe1.view.SingleChoiceView_Setting>

    <com.example.mobilesafe1.view.SingleChoiceView_Setting
        android:id="@+id/scvs_setting_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.example.mobilesafe1.view.SingleChoiceView_Setting>

    <com.example.mobilesafe1.view.CheckboxView_Setting
        xmlns:mobilesafe1="http://schemas.android.com/apk/res/com.example.mobilesafe1"
        android:id="@+id/isv_setting_blacknumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe1:desoff="黑名单拦截已关闭"
        mobilesafe1:deson="黑名单拦截已开启"
        mobilesafe1:destitle="黑名单拦截设置" >
    </com.example.mobilesafe1.view.CheckboxView_Setting>
    
    <com.example.mobilesafe1.view.CheckboxView_Setting
        xmlns:mobilesafe1="http://schemas.android.com/apk/res/com.example.mobilesafe1"
        android:id="@+id/isv_setting_applock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe1:desoff="程序锁已关闭"
        mobilesafe1:deson="程序锁已开启"
        mobilesafe1:destitle="程序锁设置" >
    </com.example.mobilesafe1.view.CheckboxView_Setting>

</LinearLayout>